# Example environment variables for Quest Analytics RAG assistant.

# Ollama / LLM settings (use lightweight models to avoid OOM on modest machines)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:1b
OLLAMA_TIMEOUT=120
OLLAMA_FALLBACK_MODEL=phi3:mini

# Embeddings
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# OpenSearch connectivity
OPENSEARCH_HOST=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX=quest-research
OPENSEARCH_TLS_VERIFY=false

# Gradio configuration
GRADIO_SHARE_LINK=false
GRADIO_SERVER_PORT=7860

# Landing page
APP_URL=http://localhost:7860
ENABLE_ANALYTICS=false
ANALYTICS_PROVIDER=plausible
ANALYTICS_ID=
